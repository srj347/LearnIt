<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Subject">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/csedsa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="23dp"
                app:cardCornerRadius="23dp"
                app:cardElevation="9dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="181dp"
                    android:background="@drawable/sub1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="41dp"
                    android:layout_marginEnd="48dp"
                    android:text="DSA"
                    android:fontFamily="@font/rubik_mono_one"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="38sp"
                    android:layout_marginRight="48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="140dp"
                    android:text="Datastructures and Algorithms"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cseidmaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="23dp"
                app:cardCornerRadius="23dp"
                app:cardElevation="9dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="181dp"
                    android:background="@drawable/sub2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="41dp"
                    android:layout_marginEnd="48dp"
                    android:text="MATHS"
                    android:fontFamily="@font/rubik_mono_one"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="38sp"
                    android:layout_marginRight="48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="140dp"
                    android:text="Mathematics"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/csefdl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="23dp"
                app:cardCornerRadius="23dp"
                app:cardElevation="9dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="181dp"
                    android:background="@drawable/sub3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="41dp"
                    android:layout_marginEnd="48dp"
                    android:text="FDLCA"
                    android:fontFamily="@font/rubik_mono_one"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="38sp"
                    android:layout_marginRight="48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="140dp"
                    android:text="Computer Architecture"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/csepy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="23dp"
                app:cardCornerRadius="23dp"
                app:cardElevation="9dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="181dp"
                    android:background="@drawable/sub1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="41dp"
                    android:layout_marginEnd="48dp"
                    android:fontFamily="@font/rubik_mono_one"
                    android:text="PYTHON"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="38sp"
                    android:layout_marginRight="48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="140dp"
                    android:text="Python"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>