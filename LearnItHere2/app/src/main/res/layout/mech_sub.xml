<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Subject">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="432dp"
                android:layout_height="100dp"

                />

            <androidx.cardview.widget.CardView
                android:id="@+id/mechamaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="23dp"
                app:cardCornerRadius="23dp"
                app:cardElevation="9dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="181dp"
                    android:background="@drawable/sub1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="41dp"
                    android:layout_marginEnd="48dp"
                    android:text="Maths"
                    android:textAllCaps="true"
                    android:fontFamily="@font/rubik_mono_one"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="38sp"
                    android:layout_marginRight="48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="140dp"
                    android:text="Mathematics"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mechamechanics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="23dp"
                app:cardCornerRadius="23dp"
                app:cardElevation="9dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="181dp"
                    android:background="@drawable/sub2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="41dp"
                    android:layout_marginEnd="48dp"
                    android:text="Mec"
                    android:fontFamily="@font/rubik_mono_one"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="38sp"
                    android:layout_marginRight="48dp"
                    android:textAllCaps="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="140dp"
                    android:text="Engineering Mechanics"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/mechadrawing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="23dp"
                app:cardCornerRadius="23dp"
                app:cardElevation="9dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="181dp"
                    android:background="@drawable/sub3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="41dp"
                    android:layout_marginEnd="48dp"
                    android:textAllCaps="true"
                    android:text="MD"
                    android:fontFamily="@font/rubik_mono_one"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="38sp"
                    android:layout_marginRight="48dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="140dp"
                    android:text="Machine Drawing"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/qppr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="23dp"
                app:cardCornerRadius="23dp"
                app:cardElevation="9dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="181dp"
                    android:background="@drawable/sub2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="41dp"
                    android:layout_marginEnd="48dp"
                    android:text="Q-PPR"
                    android:fontFamily="@font/rubik_mono_one"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="38sp"
                    android:layout_marginRight="48dp"
                    android:textAllCaps="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="140dp"
                    android:text="Previous Papers"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>